{{#partial "content"}}
<h1>All greetings</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Template</th>
      <th>Examples</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#greetings}}
      {{> greeting/_detail this.names}}
    {{/greetings}}
  </tbody>
</table>

<p>
  <a class="btn btn-primary" role="button" href="/greeting/new">Add a new greeting</a>
  <br />
  <form action="/greeting/delete" method="post">
    <button type="submit" class="btn btn-danger">Delete All</button>
  </form>
</p>
{{/partial}}

{{> layouts/base title="All greetings"}}
