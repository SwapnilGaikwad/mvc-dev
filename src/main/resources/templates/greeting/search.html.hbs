{{#partial "content"}}
<h1>All greetings</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Template</th>
      <th>Examples</th>
    </tr>
  </thead>
  <tbody>
	
	<form action="/greeting/search"  method="get">
		<label for="template">Search</label>
		<input class="form-control" type="text" name="searchKey" id="searchKey" placeholder="Search text" autofocus />
		<button class="btn btn-primary" type="submit">Submit</button>
	</form>
	
  </tbody>
</table>

<p>
  <a class="btn btn-primary" role="button" href="/greeting/new">Add a new greeting</a>
</p>
{{/partial}}

{{> layouts/base title="All greetings"}}
